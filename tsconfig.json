
{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCases" : false
  },
  "include": [
    "index.tsx",
    "App.tsx",
    "types.ts",
    "services/**/*.ts",
    "components/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "api", "api/**/*.ts"]
}
